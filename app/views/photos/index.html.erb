<h1>List of Pics</h1>

<a href="http://localhost:3000/photos/new">Add a New Pic</a>

<table>
  <tr>
    <th>Thumbnail</th>
    <th>Caption</th>
    <th colspan="3">Actions</th>
  </tr>
  <% @list_of_photos.each do |pic| %>
  <tr>
    <td>
      <img src="<%= pic.source %>" width="80">
    </td>
    <td>
      <%= pic.caption %>
    </td>
    <td>
      <a href="http://localhost:3000/photos/<%= pic.id %>">Show</a>
    </td>
    <td>
      <a href="http://localhost:3000/photos/<%= pic.id %>/edit">Edit</a>
    </td>
    <td>
      <a href="http://localhost:3000/delete_photo/<%= pic.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
